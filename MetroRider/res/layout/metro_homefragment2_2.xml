<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/optimask"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >

        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="160dp"
            android:layout_height="260dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:elevation="2dp"
           android:stateListAnimator="@drawable/translation_selector"
            card_view:cardCornerRadius="4dp" >
            
             <ImageButton android:id="@+id/item_image"
                android:layout_width="160dp"
                android:background="@drawable/busesredroute"
                android:layout_height="260dp"
                android:layout_gravity="center"/>
             
             <TextView android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:text="Bus Route"
                android:textSize="22dp"/>

        </android.support.v7.widget.CardView>

       

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="160dp"
            android:layout_height="260dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:elevation="2dp"
            android:stateListAnimator="@drawable/translation_selector"
            card_view:cardCornerRadius="4dp" >
             
               <ImageButton android:id="@+id/item_image2"
                android:layout_width="160dp"
                android:background="@drawable/notification"
                android:layout_height="260dp"
                android:layout_gravity="center"/>
             
             <TextView android:id="@+id/item_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:text="Notification"
                android:textSize="22dp"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>